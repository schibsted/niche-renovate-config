{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":automergeMinor",
        ":label(dependencies)",
        ":timezone(Europe/Oslo)",
        ":rebaseStalePrs",
        "group:definitelyTyped",
        "group:linters",
        "group:test"
    ],
    "packageRules": [{
            "updateTypes": [
                "major"
            ],
            "labels": [
                "MAJOR",
                "dependencies"
            ],
            "prPriority": 1
        },
        {
            "extends": "packages:linters",
            "packagePatterns": [
                "prettier",
                "lint-staged"
            ],
            "groupName": "linters"
        },
        {
            "packagePatterns": [
                "release-it",
                "^@release-it/",
                "^@commitlint/"
            ],
            "groupName": "release-related tools"
        },
        {
            "matchPackageNames": ["aws-sdk"],
            "extends": ["schedule:monthly"]
        }
    ]
}